{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
   
    "paths": {
      "@ht/*": ["./src/*"]
    },
    
    "incremental": true,
    "resolveJsonModule": true,
    
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}